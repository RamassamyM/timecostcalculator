
<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for(@setting) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :category, readonly: true %>
          <%= f.input :name, readonly: true %>
          <%= f.input :value %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "invisible", id: "setting-form__submit-button"%>
        </div>
      <% end %>
      <button id="sweet-alert-confirm" class="btn btn-danger">Submit</button>
    </div>
  </div>
</div>
