<div class="navbar navbar-expand-sm navbar-light bg-light navbar-lewagon justify-content-between">
  <%= link_to home_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% unless is_home %>
        <li class="nav-item mr-5">
          <%= link_to "Home", home_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-5">
          <%= link_to "Transactions", purchases_path, class: "nav-link" %>
        </li>
        <% if policy(Setting).index? %>
          <li class="nav-item mr-5">
            <%= link_to "Settings", settings_path, class: "nav-link" %>
          </li>
          <li class="nav-item mr-5">
            <%= link_to "Expiry-Emails", sidekiq_path, target: :_blank, class: "nav-link" %>
          </li>
        <% end %>
      <% end %>
    </ul>
    <% if user_signed_in? %>
        <%= image_tag "profile2.png", class: "avatar mr-3" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "" %>
      </span>
    <% else %>
      <span class="nav-item">
        <%= link_to 'Login', new_user_session_path, class: "nav-link navbar__login-link" %>
      </span>
    <% end %>
  </div>
</div>
