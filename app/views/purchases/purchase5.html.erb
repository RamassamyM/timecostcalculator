<div class="banner banner_type_small">
  <div class="container">
    <div class="banner__content">
      <h1 class="banner__title banner__title_type_smallbanner">Crosstrade shipments - FOB - CFR purchase</h1>
    </div>
  </div>
</div>
<div class="breadcrumb">
  <%= link_to calculations_path, class: '' do %>
    <i class="fas fa-chevron-left"></i> Back
  <% end %>
</div>
<div class="purchase-scheme-picture">
  <%= image_tag 'crosstrade_shipments.png' %>
</div>
<h3>Ports of loading</h3>
<% @ports_of_loading.each do |place| %>
  <p>
    <%= place %>
  </p>
<% end %>
<h3>Ports of destination</h3>
<% @ports_of_destination.each do |place| %>
  <p>
    <%= place %>
  </p>
<% end %>